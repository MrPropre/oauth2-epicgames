{
    "name": "mrpropre/oauth2-epicgames",
    "description": "Epic Games OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "type": "library",
    "require": {
        "php": ">=7.3",
        "league/oauth2-client": "^2.6"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^8.5 || ^9.0",
        "mockery/mockery": "^1.4"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Adrien Alais",
            "email": "adrien.alais@hotmail.fr"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authorisation",
        "epicgames",
        "epic games",
        "fortnite"
    ],
    "autoload": {
        "psr-4": {
            "MrPropre\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MrPropre\\OAuth2\\Client\\Test\\": "test/src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "check": "phpcs --extensions=php --standard=psr12 -sp src"
    }
}
